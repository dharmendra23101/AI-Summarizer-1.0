{
  "manifest_version": 3,
  "name": "AI Summarizer 1.0",
  "version": "1.15.08.2025",
  "description": "Professional web content summarizer with multi-language support, glossary generation, and customizable outputs",
  "permissions": [
    "activeTab",
    "scripting",
    "storage"
  ],
  "host_permissions": [
    "<all_urls>"
  ],
  "background": {
    "service_worker": "background.js"
  },
  "action": {
    "default_popup": "popup/popup.html",
    "default_icon": {
      "128": "icons/icon128.png"
    }
  },
  "icons": {
    "128": "icons/icon128.png"
  },
  "content_scripts": [
    {
      "matches": [
        "<all_urls>"
      ],
      "js": [
        "content.js"
      ],
      "run_at": "document_idle"
    }
  ],
  "web_accessible_resources": [
    {
      "resources": [
        ".env.json",
        "fullpage.html",
        "fullpage.js",
        "fullpage.css",
        "area-selector.js",
        "popup/selection.html",
        "popup/selection.js"
      ],
      "matches": [
        "<all_urls>"
      ]
    }
  ]
}